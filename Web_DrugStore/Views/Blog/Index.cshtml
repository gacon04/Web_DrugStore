@using Web_DrugStore.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ltn__utilize-overlay"></div>

<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Góc sức khoẻ</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="index.html"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li>Góc sức khoẻ</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- BLOG AREA START -->

<div class="ltn__blog-area ltn__blog-item-3-normal mb-100">
    <div class="container">
        <div class="row">



            @foreach (var item in Model)
            {
                <!-- Blog Item -->
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="ltn__blog-item ltn__blog-item-3">
                        <div class="ltn__blog-img">
                            <a href="blog-details.html"><img src="@Url.Content(item.DuongDanHinhAnh)" alt="#"></a>
                            <
                        </div>
                        <div class="ltn__blog-brief">
                            <div class="ltn__blog-meta">
                                <ul>
                                    <li class="ltn__blog-author">
                                        <a href="#"><i class="far fa-user"></i>Bởi: @item.TacGia.HoTen </a>
                                    </li>
                                    <li class="ltn__blog-tags">
                                        <a href="#"><i class="fas fa-tags"></i>Services</a>
                                    </li>
                                </ul>
                            </div>
                            <h3 class="ltn__blog-title"><a href="@Url.Action("BlogDetail", new {id = item.Id})">@item.TieuDe</a></h3>
                            <div class="ltn__blog-meta-btn">
                                <div class="ltn__blog-meta">
                                    <ul>
                                        <li class="ltn__blog-date"><i class="far fa-calendar-alt"></i>@item.CreatedAt.ToString("MMMM dd, yyyy")</li>

                                    </ul>
                                </div>
                                <div class="ltn__blog-btn">
                                    <a href="@Url.Action("BlogDetail", new {id = item.Id})">Đọc ngay</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End blog item -->
            }

        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__pagination-area text-center">
                    Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
                    <div class="ltn__pagination d-flex justify-content-center">
                        @Html.PagedListPager(Model, page => Url.Action("Index", "Blog", new { page = page }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BLOG AREA END -->

<style>
    /* Đặt chiều cao cố định cho mỗi khối blog để chúng cùng kích thước */
    .ltn__blog-item {
        display: flex;
        flex-direction: column;
        height: 450px; /* Điều chỉnh chiều cao theo ý muốn */
        box-sizing: border-box;
    }

    /* Hình ảnh cùng kích thước */
    .ltn__blog-img img {
        width: 100%;
        height: 200px; /* Điều chỉnh chiều cao hình ảnh theo ý muốn */
        object-fit: cover; /* Đảm bảo ảnh không bị méo và lấp đầy khung */
    }

    /* Phần chứa tiêu đề và nội dung ngắn */
    .ltn__blog-brief {
        padding: 15px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    /* Giới hạn tiêu đề hiển thị tối đa 3 dòng */
    .ltn__blog-title a {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: normal;
        max-height: 4.5em; /* 1.5em line-height x 3 lines */
    }
    /* Căn giữa nút "Đọc ngay" ở cuối mỗi khối blog */
    .ltn__blog-meta-btn {
        margin-top: auto;
    }

    .ltn__blog-btn a {
        display: inline-block;
        padding: 8px 20px;
        background-color: deepskyblue; /* Màu sắc cho nút, tùy chỉnh theo giao diện */
        color: white;
        border-radius: 4px;
        text-decoration: none;
    }

        .ltn__blog-btn a:hover {
            background-color: dodgerblue; /* Màu khi hover */
        }
</style>