<script>
    $(document).ready(function () {
        $(".slider-range").slider({
            range: true,
            min: 1,
            max: 1000000,
            values: [1, 1000000],
            slide: function (event, ui) {
                $(".amount").val(ui.values[0] + "VNĐ - " + ui.values[1]) +" VNĐ";
            }
        });
        $(".amount").val($(".slider-range").slider("values", 0) +
            "VNĐ - " + $(".slider-range").slider("values", 1)) + "VNĐ";
    });
</script>

