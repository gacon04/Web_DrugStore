<div class="ltn__product-slider-area ltn__product-gutter pb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area ltn__section-title-2">
                    <h1 class="title-2">Sản phẩm liên quan<span>.</span></h1>
                </div>
            </div>
        </div>
        <div class="row ltn__related-product-slider-one-active slick-arrow-1">
            @foreach (var product in Model)
            {
                <div class="col-lg-12">
                    <div class="ltn__product-item ltn__product-item-3 text-center">
                        <div class="product-img">
                            <a href="@Url.Action("ProductDetails", "SanPham", new { id = product.SanPhamId })">
                                <img src="~/Content/Images/@product.Thumbnail" alt="@product.TenSanPham" />
                            </a>
                            <div class="product-badge">
                                <ul>
                                    @if (product.Hot)
                                    {
                                        <li class="sale-badge">Hot</li>
                                    }
                                </ul>
                            </div>
                            <div class="product-hover-action">
                                <ul>
                                    <li>
                                        <a href="#" title="Quick View">
                                            <i class="far fa-eye"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" title="Add to Cart">
                                            <i class="fas fa-shopping-cart"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" title="Wishlist">
                                            <i class="far fa-heart"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="product-info">
                            <h2 class="product-title">
                                <a href="@Url.Action("ProductDetails", "SanPham", new { id = product.SanPhamId })">
                                    @product.TenSanPham
                                </a>
                            </h2>
                            <div class="product-price">
                                <span>@product.DonGia.ToString("C")</span>
                                @if (product.DonGiaGoc > product.DonGia)
                                {
                                    <del>@product.DonGiaGoc.ToString("C")</del>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
