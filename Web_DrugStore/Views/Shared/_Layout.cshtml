                <div class="container">
                    <div class="row">
                        <div class="col header-menu-column justify-content-center">
                            <div class="sticky-logo">
                                <div class="site-logo">
                                    <a href="@Url.Action("Index","Home")"><img src="~/Content/img/logo-3.png" alt="Logo"></a>
                                </div>
                            </div>
                            <div class="header-menu header-menu-2">
                                <nav>
                                    <div class="ltn__main-menu">
                                        <ul>
                                            <li>
                                                <a href="@Url.Action("Index", "Home")">Trang chủ</a>

                                            </li>
                                            <li>
                                                <a href="@Url.Action("AllProducts","Product")">Kho sản phẩm</a>

                                            </li>
                                            <li>
