                        <li><a href="#" title="Linkedin"><i class="fab fa-linkedin"></i></a></li>
                        <li><a href="#" title="Instagram"><i class="fab fa-instagram"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- Utilize Mobile Menu End -->

        <div class="ltn__utilize-overlay"></div>



        @RenderBody()
        @RenderSection("Scripts", required: false)
        <!-- CALL TO ACTION START (call-to-action-6) -->
        <div class="ltn__call-to-action-area call-to-action-6 before-bg-bottom" data-bs-bg="img/1.jpg--">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="call-to-action-inner call-to-action-inner-6 ltn__secondary-bg position-relative text-center---">
                            <div class="coll-to-info text-color-white">
                                <h1>Khẩu trang chất lượng, an tâm vững bước<br>Sức khỏe trọn vẹn, tương lai rạng ngời!</h1>
                            </div>
                            <div class="btn-wrapper">
                                <a class="btn btn-effect-3 btn-white" href="@Url.Action("AllProducts","Product")">Khám phá sản phẩm <i class="icon-next"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- CALL TO ACTION END -->

        @Html.Partial("_Footer")
    </div>

    <!-- Modaln đăng xuất -->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="logoutModalLabel">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="logoutModalLabel">Xác nhận đăng xuất</h4>
                </div>
                <div class="modal-body">
                    Bạn có chắc chắn muốn đăng xuất?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-primary" id="confirmLogout">Đăng xuất</button>
                </div>
            </div>
        </div>
    </div>





    <!-- Body main wrapper end -->
    <!-- All JS Plugins -->
    <script src="~/Scripts/WishListjs.js"></script>
    <script src="~/Content/js/plugins.js"></script>
    <!-- Contact Form -->
    <script src="~/Content/js/contact.js"></script>
    <!-- Main JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script src="~/Content/js/main.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jsShopping.js"></script> @*cấu hình cho việc thêm sản phẩm vào giỏ hàng*@
    <script>
    $(document).ready(function(){
        // Khi người dùng nhấn vào liên kết Đăng xuất
        $('#logoutLink').click(function(e){
            e.preventDefault(); // Ngăn chặn hành động mặc định của liên kết
            $('#logoutModal').modal('show'); // Hiển thị modal
        });

        // Khi người dùng nhấn vào nút Đăng xuất trong modal
        $('#confirmLogout').click(function(){
            window.location.href = '@Url.Action("Logout", "Account")'; // Chuyển hướng đến action Logout
        });

        $('.btn[data-dismiss="modal"]').click(function () {
            $('#logoutModal').modal('hide'); // Ẩn modal
        });
    });
    </script>
</body>
</html>
