@{
    ViewBag.Title = "Đăng kí - PharmaVillage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="ltn__utilize-overlay"></div>

<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Tài khoản</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="index.html"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Trang chủ</a></li>
                            <li>Đăng kí</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- LOGIN AREA START (Register) -->
<div class="ltn__login-area pb-110">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area text-center">
                    <h1 class="section-title">ĐĂNG KÝ NGAY <br>NHẬN ƯU ĐÃI HẤP DẪN</h1>
                    <p>Tham gia ngay để không bỏ lỡ các chương trình khuyến mãi đặc biệt từ cửa hàng thuốc của chúng tôi.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="account-login-inner">
                    <form action="/Login/Register" method="post" class="ltn__form-box contact-form-box">
                        @Html.AntiForgeryToken()
                        <input type="text" name="HoTen" placeholder="Họ tên" required />

                        <input type="email" name="Email" placeholder="Địa chỉ Email*" required />
                        <input type="text" name="SDT" placeholder="Số điện thoại*" required />


                        <input type="password" name="MatKhau" placeholder="Mật khẩu*" required />
                        <input type="password" name="Confirmpassword" placeholder="Xác nhận mật khẩu" required />
                        <input type="text" name="DiaChi" placeholder="Địa chỉ (tùy chọn)" />


                        <label class="checkbox-inline">
                            <input type="checkbox" value="">
                            Tôi đồng ý để PharmaVillage xử lý dữ liệu cá nhân của mình nhằm gửi các tài liệu tiếp thị cá nhân hóa, theo đúng nội dung mẫu đơn đồng ý và chính sách bảo mật.
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" value="">
                            Bằng việc click "Tạo tài khoản", tôi đồng ý với chính sách bảo mật.
                        </label>

                        <div class="btn-wrapper">
                            <button class="theme-btn-1 btn reverse-color btn-block" type="submit">TẠO TÀI KHOẢN</button>
                        </div>
                    </form>
                    <div class="by-agree text-center">
                        <p>Bằng việc tạo tài khoản, bạn đồng ý với các nội dung sau của chúng tôi:</p>
                        <p><a href="@Url.Action("ConfidentialityPolicy", "About")">CÁC ĐIỀU KHOẢN &nbsp; &nbsp; | &nbsp; &nbsp;  CHÍNH SÁCH BẢO MẬT</a></p>
                        <div class="go-to-btn mt-50">
                            <a href="@Url.Action("Index")">ĐÃ CÓ TÀI KHOẢN ?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- LOGIN AREA END -->
