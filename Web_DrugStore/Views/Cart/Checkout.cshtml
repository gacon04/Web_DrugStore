@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Web_DrugStore.ViewModel.CheckOutItemVM
<div class="ltn__utilize-overlay"></div>
<style>
    .error {
        color: red;
        font-style: italic;
        margin-bottom: 10px
    }
</style>
<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">ĐẶT HÀNG</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="index.html"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Giỏ hàng</a></li>
                            <li>Đặt hàng</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- WISHLIST AREA START -->
<div class="ltn__checkout-area mb-105">
    <div class="container">
        <div class="row">


            <form method="post" action="@Url.Action("Checkout", "Cart")">

                @Html.AntiForgeryToken()

                <div class="col-lg-12">
                    <div class="ltn__checkout-inner">
                        <div class="ltn__checkout-single-content mt-50">
                            <h2 class="title-2">CHI TIẾT HOÁ ĐƠN</h2>

                            <!-- Hiển thị lỗi chung -->
                            @Html.ValidationSummary(true, "Vui lòng kiểm tra lại các thông tin sau:", new { @class = "text-danger" })

                            <div class="ltn__checkout-single-content-info">
                                <h4>XÁC NHẬN THÔNG TIN NHẬN HÀNG</h4>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="input-item input-item-name ltn__custom-icon">
                                            <h6>Họ và tên *</h6>
                                            @Html.TextBoxFor(m => m.TenKhachHang, new { @class = "form-control", placeholder = "Nhập vào họ và tên người nhận" })
                                            @Html.ValidationMessageFor(m => m.TenKhachHang, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="input-item input-item-email ltn__custom-icon">
                                            <h6>Địa chỉ Email *</h6>
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nhập vào email nhận thông tin" })
                                            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="input-item input-item-phone ltn__custom-icon">
                                            <h6>Số điện thoại liên hệ *</h6>
                                            @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control", placeholder = "Nhập vào số điện thoại người nhận" })
                                            @Html.ValidationMessageFor(m => m.SoDienThoai, null, new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="input-item input-item-website ltn__custom-icon">
                                            <h6>Nơi làm việc</h6>
                                            @Html.TextBoxFor(m => m.DiaChiChoLam, new { @class = "form-control", placeholder = "Nhập vào địa chỉ nơi làm việc (Tuỳ chọn)" })
                                            @Html.ValidationMessageFor(m => m.DiaChiChoLam, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-12 col-md-12">
                                        <h6>Số nhà</h6>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="input-item">
                                                    @Html.TextBoxFor(m => m.SoNha, new { @class = "form-control", placeholder = "Nhập vào số nhà (tuỳ chọn)" })
                                                    @Html.ValidationMessageFor(m => m.SoNha, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="input-item">
                                                    @Html.TextBoxFor(m => m.TenDuong, new { @class = "form-control", placeholder = "Nhập vào tên đường (tuỳ chọn)" })
                                                    @Html.ValidationMessageFor(m => m.TenDuong, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-4 col-md-6">
                                        <h6>Xã / Phường *</h6>
                                        <div class="input-item">
                                            @Html.TextBoxFor(m => m.TenXa, new { @class = "form-control", placeholder = "Tên xã / Tên phường" })
                                            @Html.ValidationMessageFor(m => m.TenXa, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-6">
                                        <h6>Quận / Huyện *</h6>
                                        <div class="input-item">
                                            @Html.TextBoxFor(m => m.TenHuyen, new { @class = "form-control", placeholder = "Tên quận / Tên huyện" })
                                            @Html.ValidationMessageFor(m => m.TenHuyen, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-6">
                                        <h6>Tỉnh *</h6>
                                        <div class="input-item">
                                            @Html.TextBoxFor(m => m.TenTinh, new { @class = "form-control", placeholder = "Tên Tỉnh" })
                                            @Html.ValidationMessageFor(m => m.TenTinh, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <h6>Ghi chú thêm (Tuỳ chọn)</h6>
                                <div class="input-item input-item-textarea ltn__custom-icon">
                                    @Html.TextAreaFor(m => m.GhiChu, new { @class = "form-control", placeholder = "Các yêu cầu đặc biệt về thời gian giao hàng, địa chỉ, vv..." })
                                    @Html.ValidationMessageFor(m => m.GhiChu, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="checkout-container">
                    <div class="col-lg-6">
                        <div class="ltn__checkout-payment-method mt-50">
                            <h4 class="title-2">Phương thức thanh toán</h4>
                            <div>
                                <div class="form-check">
                                    @Html.RadioButtonFor(m => m.PhuongThucThanhToan, "COD", new { id = "COD", @class = "form-check-input" })
                                    <label class="form-check-label" for="COD">Thanh toán khi nhận hàng (COD)</label>
                                </div>
                                <div class="form-check">
                                    @Html.RadioButtonFor(m => m.PhuongThucThanhToan, "MOMO", new { id = "MOMO", @class = "form-check-input" })
                                    <label class="form-check-label" for="MOMO">Ví điện tử Momo</label>
                                </div>
                                <div class="form-check">
                                    @Html.RadioButtonFor(m => m.PhuongThucThanhToan, "VNPAY", new { id = "VNPAY", @class = "form-check-input" })
                                    <label class="form-check-label" for="VNPAY">Ví điện tử VNPAY</label>
                                </div>
                            </div>
                            <div class="ltn__payment-note mt-30 mb-30">
                                <p>Dữ liệu cá nhân của bạn sẽ được sử dụng để xử lý đơn hàng, hỗ trợ trải nghiệm của bạn trên trang web này, và cho các mục đích khác được mô tả trong chính sách bảo mật của chúng tôi.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        @Html.Action("Partial_Item_Checkout")
                    </div>
                </div>
              
                <div style="display: flex; justify-content: flex-end; margin-top: 20px;">
                    <button class="btn theme-btn-1 btn-effect-1 text-uppercase" type="submit">Xác nhận đặt hàng</button>
                </div>
            </form>


            <style>
                .checkout-container {
                    display: flex;
                    flex-wrap: wrap; /* Đảm bảo tương thích với màn hình nhỏ */
                }

                .shoping-cart-total, .ltn__checkout-payment-method {
                    border: 1px solid #ddd; /* Tùy chọn: viền để nhìn rõ */
                    padding: 20px; /* Tùy chọn: khoảng cách bên trong */
                }
            </style>


        </div>
    </div>

</div>
<!-- WISHLIST AREA START -->
@section Scripts{




}



