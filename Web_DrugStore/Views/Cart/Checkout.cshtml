@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ltn__utilize-overlay"></div>
<style>
    .error {
        color: red;
        font-style: italic;
        margin-bottom: 10px
    }
</style>
<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Thanh toán</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="index.html"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li>Thanh toán</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- WISHLIST AREA START -->
<div class="ltn__checkout-area mb-105">
    <div class="container">
        <div class="row">
            @Html.Action("Partial_CheckOut", "Cart")

        </div>
    </div>

</div>
<!-- WISHLIST AREA START -->
@section Scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery-3.7.0.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#myForm').validate({
                rules:
                {
                    'TenKhachHang': {
                        required: true
                    },
                    'SoDienThoai': {
                        required: true,

                    },
                    'Email': {
                        required: true,
                        Email: true
                    },
                    'TenXa': {
                        required: true,

                    },
                    'TenHuyen': {
                        required: true,

                    },
                    'TenTinh': {
                        required: true,

                    },
                },
                messages: {
                    'TenKhachHang': 'Vui lòng không để trống và nhập tên khách hàng hợp lệ (chỉ gồm chữ cái)',
                    'SoDienThoai': 'Vui lòng nhập vào số điện thoại hợp lệ',
                    'Email': 'Vui lòng nhập vào email hợp lệ',
                    'TenXa': 'Vui lòng nhập vào trường này',
                    'TenHuyen': 'Vui lòng nhập vào trường này',
                    'TenTinh': 'Vui lòng nhập vào trường này',
                }
            });
        })
    </script>
}



