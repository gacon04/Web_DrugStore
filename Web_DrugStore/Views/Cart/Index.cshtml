
@{
    ViewBag.Title = "Giỏ hàng của tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="ltn__utilize-overlay"></div>

<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Giỏ hàng</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="index.html"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Tài khoản</a></li>
                            <li>Giỏ hàng</li>
                        </ul>
                    </div>
                </div>  
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- SHOPING CART AREA START -->
<div class="liton__shoping-cart-area mb-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping-cart-inner">

                    @if (false)
                    {
                        <div class="empty-cart">
                            <div class="text-content">
                                <h2>Giỏ hàng trống</h2>
                                <p>Xem PharmaVillage, lựa hàng ngay đi !</p>
                            </div>
                            <img src="~/Content/img/EmptyCart.png" alt="Giỏ hàng trống" class="cart-image" />
                        </div>
                        <br />
                        <button onclick="window.location.href='@Url.Action("Index", "Home")';" style="background-color: rgb(50, 166, 233)" class="btn theme-btn-2">Mua sắm ngay !</button>

                    }
                    else
                    {
                        <div class="shoping-cart-table table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <td class="cart-product-remove">Huỷ</td>
                                        <td class="cart-product-image">Hình ảnh</td>
                                        <td class="cart-product-info">Tên sản phẩm</td>
                                        <td class="cart-product-price">Giá tiền</td>
                                        <td class="cart-product-quantity">Số lượng</td>
                                        <td class="cart-product-subtotal">Thành tiền</td>
                                    </tr>

                                </thead>
                                <tbody>

                                    
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="cart-product-remove">x</td>
                                            <td class="cart-product-image">
                                                <a href="@Url.Action("ProdDetail","Product",new {id = item.SanPhamId})"><img src="@item.HinhAnh" alt="#"></a>
                                            </td>
                                            <td class="cart-product-info">
                                                <h4><a href="product-details.html">@item.TenSanPham</a></h4>
                                            </td>
                                            <td class="cart-product-price">@item.Gia.ToString("#,0") đ</td>
                                            <td class="cart-product-quantity">
                                                <div class="cart-plus-minus">
                                                    <input type="text" value="@item.SoLuong" name="qtybutton" class="cart-plus-minus-box">
                                                </div>
                                            </td>
                                            <td class="cart-product-subtotal">@item.ThanhTien</td>
                                        </tr>

                                    }


                                    <tr class="cart-coupon-row">
                                        <td colspan="6">
                                            <div class="cart-coupon">
                                                <input type="text" name="cart-coupon" placeholder="Mã giảm giá">
                                                <button type="submit" class="btn theme-btn-2 btn-effect-2">Áp dụng</button>
                                            </div>
                                        </td>
                                        <td>
                                            <button type="submit" class="btn theme-btn-2 btn-effect-2-- disabled"><i class="bi bi-arrow-bar-left"></i> Tiếp tục mua sắm</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="shoping-cart-total mt-50">
                            <h4>Giỏ hàng Totals</h4>
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <td>Tổng tiền hàng trong giỏ</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>Phí đóng gói & vận chuyển</td>
                                        <td></td>
                                    </tr>

                                    <tr>
                                        <td><strong>TỔNG THÀNH TIỀN</strong></td>
                                        <td><strong></strong></td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="btn-wrapper text-right">
                                <a href="" class="theme-btn-1 btn btn-effect-1">ĐI TỚI THANH TOÁN</a>
                            </div>
                        </div>
                    }



                </div>
            </div>
        </div>
    </div>
</div>
<!-- SHOPING CART AREA END -->
<style>
    .empty-cart {
        display: flex; /* Sử dụng flexbox để căn ngang các phần tử */
        align-items: center; /* Căn giữa hình ảnh theo chiều dọc với nội dung văn bản */
        justify-content: center; /* Căn giữa theo chiều ngang */
        height: 100vh; /* Chiều cao vùng chứa = toàn màn hình */
        text-align: left; /* Đảm bảo văn bản căn lề trái */
        gap: 20px; /* Khoảng cách giữa hình ảnh và nội dung văn bản */
    }

    .text-content {
        display: flex;
        flex-direction: column; /* Sắp xếp thẻ h2 và p theo chiều dọc */
        justify-content: center; /* Đảm bảo nội dung văn bản căn giữa theo chiều dọc */
    }

    .cart-image {
        max-width: 100px; /* Điều chỉnh kích thước hình ảnh */
        height: auto;
        align-self: flex-start; /* Đảm bảo đầu hàng ảnh thẳng với đầu thẻ h2 */
    }



</style>