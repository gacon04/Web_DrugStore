
@{
    ViewBag.Title = "Giỏ hàng của tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="ltn__utilize-overlay"></div>

<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Giỏ hàng</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="index.html"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Tài khoản</a></li>
                            <li>Giỏ hàng</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- SHOPING CART AREA START -->
<div class="liton__shoping-cart-area mb-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping-cart-inner">

                    @if (Model.Count == 0)
                    {
                        <div class="empty-cart">
                            <h2>Giỏ hàng của bạn đang trống</h2>
                            <img src="~/Content/img/EmptyCart.png" alt="Giỏ hàng trống" />
                        </div>
                    }
                    else
                    {
                        <div class="shoping-cart-table table-responsive">
                            <table class="table">
                                <!-- <thead>
                    <th class="cart-product-remove">Remove</th>
                    <th class="cart-product-image">Image</th>
                    <th class="cart-product-info">Product</th>
                    <th class="cart-product-price">Price</th>
                    <th class="cart-product-quantity">Quantity</th>
                    <th class="cart-product-subtotal">Subtotal</th>
                </thead> -->
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="cart-product-remove">x</td>
                                            <td class="cart-product-image">
                                                <a href="@Url.Action("ProdDetail","Product",new {id = item.SanPhamId})"><img src="@item.HinhAnh" alt="#"></a>
                                            </td>
                                            <td class="cart-product-info">
                                                <h4><a href="product-details.html">@item.TenSanPham</a></h4>
                                            </td>
                                            <td class="cart-product-price">@item.Gia.ToString("#,0") đ</td>
                                            <td class="cart-product-quantity">
                                                <div class="cart-plus-minus">
                                                    <input type="text" value="@item.SoLuong" name="qtybutton" class="cart-plus-minus-box">
                                                </div>
                                            </td>
                                            <td class="cart-product-subtotal">@item.ThanhTien</td>
                                        </tr>

                                    }

                                    }


                                    <tr>


                                    <tr class="cart-coupon-row">
                                        <td colspan="6">
                                            <div class="cart-coupon">
                                                <input type="text" name="cart-coupon" placeholder="Mã giảm giá">
                                                <button type="submit" class="btn theme-btn-2 btn-effect-2">Áp dụng</button>
                                            </div>
                                        </td>

                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="shoping-cart-total mt-50">
                            <h4>Giỏ hàng Totals</h4>
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <td>Tổng tiền hàng trong giỏ</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>Phí đóng gói & vận chuyển</td>
                                        <td></td>
                                    </tr>

                                    <tr>
                                        <td><strong>TỔNG THÀNH TIỀN</strong></td>
                                        <td><strong></strong></td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="btn-wrapper text-right">
                                <a href="checkout.html" class="theme-btn-1 btn btn-effect-1">ĐI TỚI THANH TOÁN</a>
                            </div>
                        </div>
                    }



                </div>
            </div>
        </div>
    </div>
</div>
<!-- SHOPING CART AREA END -->
<style>
    /* Căn chỉnh cả chữ và hình ra giữa màn hình */
    .empty-cart {
        display: flex; /* Sử dụng flexbox */
        justify-content: center; /* Căn giữa theo chiều ngang */
        align-items: center; /* Căn giữa theo chiều dọc */
        text-align: center; /* Căn giữa nội dung văn bản */
    }

        /* Tùy chỉnh khoảng cách giữa chữ và hình */
        .empty-cart h2 {
            margin-right: 10px; /* Khoảng cách giữa chữ và hình */
            font-size: 24px; /* Tùy chỉnh kích thước chữ */
            color: #333; /* Màu chữ */
        }

        /* Tùy chỉnh hình ảnh */
        .empty-cart img {
            max-width: 100px; /* Giới hạn chiều rộng hình ảnh */
            height: auto; /* Giữ nguyên tỷ lệ hình ảnh */
        }

</style>