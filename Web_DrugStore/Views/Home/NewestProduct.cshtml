@model IEnumerable<Web_DrugStore.Models.SanPham>
<div class="ltn__product-area ltn__product-gutter  no-product-ratting pt-20--- pt-65  pb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area ltn__section-title-2 text-center">
                    <h1 class="section-title">Sản phẩm mới tại PharmaVillage</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <div class="row">
                    <div class="col-lg-12 col-sm-6">
                        <div class="ltn__banner-item">
                            <div class="ltn__banner-img">
                                <a href="shop.html"><img src="~/Content/img/banner/11.jpg" alt="Banner Image"></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-sm-6">
                        <div class="ltn__banner-item">
                            <div class="ltn__banner-img">
                                <a href="shop.html"><img src="~/Content/img/banner/12.jpg" alt="Banner Image"></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="row ltn__tab-product-slider-one-active--- slick-arrow-1">
                    @foreach (var item in Model)
                    {
                        <!-- ltn__product-item -->
                        <div class="col-lg-3--- col-md-4 col-sm-6 col-6">
                            <div class="ltn__product-item ltn__product-item-2 text-left">
                                <div class="product-img">
                                    <a href="@Url.Action("ProdDetail", "Product", new { id = item.SanPhamId })"><img src="@item.Thumbnail" alt="#"></a>
                                    <div class="product-hover-action">
                                        <ul>
                                            <li>
                                                <a href="#" title="Quick View" data-bs-toggle="modal" data-bs-target="#quick_view_modal">
                                                    <i class="far fa-eye"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#" title="Add to Cart" data-bs-toggle="modal" data-bs-target="#add_to_cart_modal">
                                                    <i class="fas fa-shopping-cart"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#" title="Wishlist" data-bs-toggle="modal" data-bs-target="#liton_wishlist_modal">
                                                    <i class="far fa-heart"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="product-info">
                                    <div class="product-ratting">
                                        <ul>
                                            <li><a href="#"><i class="fas fa-star"></i></a></li>
                                            <li><a href="#"><i class="fas fa-star"></i></a></li>
                                            <li><a href="#"><i class="fas fa-star"></i></a></li>
                                            <li><a href="#"><i class="fas fa-star-half-alt"></i></a></li>
                                            <li><a href="#"><i class="far fa-star"></i></a></li>
                                        </ul>
                                    </div>
                                    <h2 class="product-title"><a href="@Url.Action("ProdDetail", "Product", new { id = item.SanPhamId })">@item.TenSanPham</a></h2>
                                    <div class="product-price">
                                        <span>@item.DonGia.ToString("#,0") ₫</span>
                                        @if (item.DonGiaGoc != 0.0m)
                                        {
                                            <del>@item.DonGiaGoc.ToString("#,0") ₫</del>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!--  -->
                    }

                </div>
            </div>
        </div>
    </div>
</div>
<style>
    . /* Đảm bảo tất cả các sản phẩm có kích thước giống nhau */
    .ltn__product-item {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }

    /* Định dạng hình ảnh sản phẩm */
    .product-img img {
        width: 100%;
        height: 250px; /* Chiều cao cố định cho hình ảnh */
        object-fit: cover;
    }

    /* Định dạng thông tin sản phẩm */
    .product-info {
        padding: 15px;
    }

    /* Định dạng tiêu đề sản phẩm */
    .product-title a {
        display: -webkit-box;
        max-width: 100%;
        -webkit-line-clamp: 2; /* Hiển thị tối đa 2 dòng */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: normal;
        font-size: 16px;
        font-weight: bold;
        line-height: 1.2;
    }

    /* Định dạng giá sản phẩm */
    .product-price {
        margin-top: 5px;
        font-size: 14px;
    }

    /* Định dạng đánh giá sản phẩm */
    .product-ratting ul {
        display: flex;
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .product-ratting ul li {
            margin-right: 5px;
        }


        .product-hover-action ul li {
            margin-right: 5px;
        }


</style>