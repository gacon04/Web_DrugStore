@model Web_DrugStore.ViewModel.RegisterVM
@{
    ViewBag.Title = "Đăng kí - PharmaVillage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="ltn__utilize-overlay"></div>

<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Tài khoản</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="index.html"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Trang chủ</a></li>
                            <li>Đăng kí</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- LOGIN AREA START (Register) -->
<div class="ltn__login-area pb-110">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area text-center">
                    <h1 class="section-title">ĐĂNG KÝ NGAY <br>NHẬN ƯU ĐÃI HẤP DẪN</h1>
                    <p>Tham gia ngay để không bỏ lỡ các chương trình khuyến mãi đặc biệt từ cửa hàng thuốc của chúng tôi.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="account-login-inner">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @ViewBag.Message
                        </div>
                    }

                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "ltn__form-box contact-form-box" }))
                    {
                        @Html.AntiForgeryToken()
                        @* Hiển thị thông báo lỗi nếu có *@
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @* Họ Tên *@
                        @Html.ValidationMessageFor(m => m.HoTen, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(m => m.HoTen, new { placeholder = "Họ tên", @class = "form-control" })


                        @* Email *@
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Địa chỉ Email*", @type = "email", @class = "form-control" })

                        @* Số điện thoại *@
                        @Html.ValidationMessageFor(m => m.SDT, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(m => m.SDT, new { placeholder = "Số điện thoại*", @class = "form-control" })

                        @* Mật khẩu *@
                        @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                        @Html.PasswordFor(m => m.MatKhau, new { placeholder = "Mật khẩu*", @class = "form-control" })

                        @* Nhập lại mật khẩu *@
                        @Html.ValidationMessageFor(m => m.NhapLaiMatKhau, "", new { @class = "text-danger" })
                        @Html.PasswordFor(m => m.NhapLaiMatKhau, new { placeholder = "Xác nhận mật khẩu", @class = "form-control" })

                        @* Địa chỉ (tùy chọn) *@
                        @Html.TextBoxFor(m => m.DiaChi, new { placeholder = "Địa chỉ (tùy chọn)", @class = "form-control" })

                        @* Các điều khoản *@
                        <label class="checkbox-inline">
                            <input type="checkbox" required /> Tôi đồng ý để PharmaVillage xử lý dữ liệu cá nhân của mình nhằm gửi các tài liệu tiếp thị cá nhân hóa, theo đúng nội dung mẫu đơn đồng ý và chính sách bảo mật.
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" required /> Bằng việc click "Tạo tài khoản", tôi đồng ý với chính sách bảo mật.
                        </label>

                        <div class="btn-wrapper">
                            <button class="theme-btn-1 btn reverse-color btn-block" type="submit">TẠO TÀI KHOẢN</button>
                        </div>
                    }

                    <div class="by-agree text-center">
                        <p>Bằng việc tạo tài khoản, bạn đồng ý với các nội dung sau của chúng tôi:</p>
                        <p><a href="@Url.Action("ConfidentialityPolicy", "About")">CÁC ĐIỀU KHOẢN &nbsp; &nbsp; | &nbsp; &nbsp;  CHÍNH SÁCH BẢO MẬT</a></p>
                        <div class="go-to-btn mt-50">
                            <a href="@Url.Action("Login","Account")">ĐÃ CÓ TÀI KHOẢN ?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- LOGIN AREA END -->

<style>
    /* Tùy chỉnh kiểu cho trường input */
    .ltn__form-box input {
        width: 100%;
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid #e1e1e1;
        border-radius: 5px;
        font-size: 16px;
        color: #333;
        font-family: inherit;
        box-sizing: border-box;
    }
</style>
