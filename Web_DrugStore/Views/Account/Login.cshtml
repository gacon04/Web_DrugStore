@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ltn__utilize-overlay"></div>

<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Tài khoản </h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="index.html"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> PharmaVillage</a></li>
                            <li>Đăng nhập</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="ltn__login-area pb-65">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area text-center">
                    <h1 class="section-title">Xin chào <br>Vui lòng nhập vào tài khoản của bạn để tiếp tục</h1>
                    <p>Đăng nhập để tận hưởng trải nghiệm tuyệt vời</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="account-login-inner">
                    <form action="@Url.Action("Login","Account")" method="post" class="ltn__form-box contact-form-box">
                        @Html.AntiForgeryToken()
                        <span class="error-message">@ViewData["Err1"]</span>
                        <input type="text" name="Email" placeholder="Nhập vào tài khoản*" required>
                        <span class="error-message">@ViewData["Err2"]</span>
                        <input type="password" name="MatKhau" placeholder="Mật khẩu" required />
                        <span class="error-message">@ViewData["Err3"]</span>
                        <div class="btn-wrapper mt-0">
                            <button class="theme-btn-1 btn btn-block" style="text-align:center" type="submit">ĐĂNG NHẬP</button>
                        </div>
                        <div class="go-to-btn mt-20">
                            <a href="#"><small>QUÊN MẬT KHẨU?</small></a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="account-create text-center pt-50">
                    <h4>CHƯA CÓ TÀI KHOẢN?</h4>
                    <p>Đăng kí ngay để nhận những ưu đãi sớm nhất</p>
                    <div class="btn-wrapper">
                        <a href="@Url.Action("Register")" class="theme-btn-1 btn black-btn">TẠO TÀI KHOẢN</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .error-message {
        color: #ff4d4d; /* Màu đỏ nổi bật */
        font-size: 14px;
        margin-bottom: 8px;
        font-weight: bold;
    }

    /* Đặt lỗi gần input */
    input + .error-message {
        margin-top: 4px;
    }
    .btn-wrapper {
        display: flex; /* Sử dụng flexbox */
        justify-content: center; /* Căn giữa nội dung theo chiều ngang */
        align-items: center; /* Căn giữa nội dung theo chiều dọc (nếu cần) */
        width: 100%; /* Đảm bảo width của thẻ div chiếm toàn bộ chiều rộng */
        margin-top: 20px; /* Tạo khoảng cách phía trên */
    }

</style>