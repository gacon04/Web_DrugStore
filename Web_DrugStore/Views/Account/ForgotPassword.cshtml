@model Web_DrugStore.ViewModel.ForgotPassMailVM

@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ltn__utilize-overlay"></div>

<div class="ltn__login-area d-flex justify-content-center align-items-center vh-60">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <div class="account-login-inner text-center p-4 rounded">
                    <div class="section-title-area mb-4">
                        <h1 class="section-title">QUÊN MẬT KHẨU</h1>
                        <p>Nhập email của bạn để khôi phục mật khẩu</p>
                    </div>
                    <form action="@Url.Action("ForgotPassword", "Account")" method="post" class="ltn__form-box contact-form-box">
                        @Html.AntiForgeryToken()
                        <div>
                            @Html.TextBoxFor(m => m.Email, new { @placeholder = "Nhập vào email của bạn" })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>                        
                        <br />
                        <div class="btn-wrapper mt-0">
                            <button class="theme-btn-1 btn btn-block btn-primary" type="submit">KHÔI PHỤC MẬT KHẨU</button>
                        </div>
                    </form>
                    <div class="go-to-btn mt-3">
                        <a href="@Url.Action("Login", "Account")">Đã có tài khoản? Quay trở lại đăng nhập</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-message {
        color: #ff4d4d;
        font-size: 14px;
        margin-bottom: 8px;
        font-weight: bold;
    }

    /* Đặt lỗi gần input */
    input + .error-message {
        margin-top: 4px;
    }

    .btn-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        margin-top: 20px;
    }

    .vh-60 {
        height: 60vh;
    }

    .section-title-area {
        margin-bottom: 20px;
    }

    .go-to-btn {
        margin-top: 20px;
        font-size: 14px;
    }

        .go-to-btn a {
            color: #007bff;
            text-decoration: none;
        }

            .go-to-btn a:hover {
                text-decoration: underline;
            }



    .rounded {
        border-radius: 10px;
    }

    .form-control {
        padding: 10px;
        font-size: 16px;
    }
</style>
