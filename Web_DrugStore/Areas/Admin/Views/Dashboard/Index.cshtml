
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var doanhThuTrongThang = ViewBag.DoanhThuTrongThang;
    var tangTruongDoanhThu= ViewBag.TangTruongDoanhThu;
    var soLuongDonHang = ViewBag.SoLuongDonHang;
    var soLuongKhachhang = ViewBag.SoLuongKhacHang;
}
<!-- Content Wrapper START -->
<div class="main-content">
    <div class="row">
        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <div class="media align-items-center">
                        <div class="avatar avatar-icon avatar-lg avatar-blue">
                            <i class="anticon anticon-dollar"></i>
                        </div>
                        <div class="m-l-15">
                            <h2 class="m-b-0">@doanhThuTrongThang đồng</h2>
                            <p class="m-b-0 text-muted">Doanh thu tháng</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <div class="media align-items-center">
                        <div class="avatar avatar-icon avatar-lg avatar-cyan">
                            <i class="anticon anticon-line-chart"></i>
                        </div>
                        <div class="m-l-15">
                            <h2 class="m-b-0">@tangTruongDoanhThu %</h2>
                            <p class="m-b-0 text-muted">Tăng trưởng tháng</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <div class="media align-items-center">
                        <div class="avatar avatar-icon avatar-lg avatar-gold">
                            <i class="anticon anticon-profile"></i>
                        </div>
                        <div class="m-l-15">
                            <h2 class="m-b-0">@soLuongDonHang đơn</h2>
                            <p class="m-b-0 text-muted">Tổng đơn hàng</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <div class="media align-items-center">
                        <div class="avatar avatar-icon avatar-lg avatar-purple">
                            <i class="anticon anticon-user"></i>
                        </div>
                        <div class="m-l-15">
                            <h2 class="m-b-0">@soLuongKhachhang</h2>
                            <p class="m-b-0 text-muted">Số lượng khách</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-8">
            <div class="card">
               @Html.Action("TongDoanhThu","Dashboard")
            </div>
        </div>
       @Html.Action("KhachHangTrongThang","Dashboard")
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="m-b-0">230 000 đ</h2>
                            <p class="m-b-0 text-muted">Doanh thu trung bình</p>
                        </div>
                        <div>
                            <span class="badge badge-pill badge-cyan font-size-12">
                                <span class="font-weight-semibold m-l-5">+5.7%</span>
                            </span>
                        </div>
                    </div>
                    <div class="m-t-50" style="height: 375px">
                        <canvas class="chart" id="avg-profit-chart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        @Html.Action("SPBanChay","Dashboard")
    </div>
    <!-- Core Vendors JS -->
    <script src="~/Content/Admin_assets/js/vendors.min.js"></script>

    <!-- page js -->
    <script src="~/Content/Admin_assets/vendors/chartjs/Chart.min.js"></script>
    <script src="~/Content/Admin_assets/js/pages/dashboard-default.js"></script>

    <!-- Core JS -->
    <script src="~/Content/Admin_assets/js/app.min.js"></script>

</div>
                </div>
<!-- Content Wrapper END -->
