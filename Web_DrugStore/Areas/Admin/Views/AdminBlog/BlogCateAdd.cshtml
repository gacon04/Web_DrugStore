﻿@model Web_DrugStore.Models.DanhMucBlog
@{
    ViewBag.Title = "Thêm danh mục bài viết - PharmaVillage";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align:center; margin-bottom: 20px;">THÊM MỚI DANH MỤC BÀI VIẾT</h2>
<br />
<form method="post" action="@Url.Action("BlogCateAdd", "AdminBlog", new { area = "Admin" })">
    <div class="form-group row" style="margin-bottom: 15px;">
        <label for="TenDanhMuc" class="col-sm-2 col-form-label">Tên danh mục bài viết</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.TenDanhMuc, new { @class = "form-control", placeholder = "Nhập vào tên danh mục bài viết" })
        </div>
    </div>
    <div class="form-group" style="margin-bottom: 15px;">
        <label for="MoTa" class="col-form-label">Miêu tả</label>
        @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", placeholder = "Nhập vào miêu tả danh mục (tuỳ chọn)" })
    </div>

    <div class="form-group">
        @Html.CheckBoxFor(model => model.HoatDong, new { @id = "checkbox1" })
        <label for="checkbox1">Hoạt động</label>
    </div>

    <div class="form-group row" style="margin-top: 20px;">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-tone m-r-5">Xác nhận thêm</button>
            <a href="@Url.Action("BlogCateIndex")" class="btn btn-danger btn-tone m-r-5">Thoát</a>
        </div>
    </div>
</form>