
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model List<Web_DrugStore.Models.DanhMuc>
<div class="text-right mb-3">
    
    <button class="btn btn-primary m-r-5"> <i class="anticon anticon-plus"></i> Thêm danh mục</button>
</div>
@* Hiện thông báo về tình trạng xoá danh mục*@
@if (TempData["Message"] != null)
{
    <div class="alert alert-warning">
        @TempData["Message"]
    </div>
}
<h1>DANH SÁCH DANH MỤC</h1>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Tên danh mục</th>
                <th scope="col">Danh mục cha</th>
                <th scope="col">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>
                        @item.TenDanhMuc
                        @if (item.DanhMucCha==null)
                        {
                           <span class="badge badge-pill badge-volcano">Danh mục cha </span>
                        }
                    </td>
                    <td>
                        @if (item.DanhMucCha != null)
                        {
                            @item.DanhMucCha.TenDanhMuc
                        }
                        else
                        {
                            <span>Không có</span>
                        }
                    </td>
                    <td>
                        <div class="button-container" style="display: flex; gap: 10px;">
                            <button class="btn btn-info m-r-5">Chi tiết</button>
                            <button class="btn btn-warning m-r-5">Chỉnh sửa</button>

                            @using (Html.BeginForm("Delete", "AdminCategory", new { id = item.Id }, FormMethod.Post))
                            {
                                <button type="submit" class="btn btn-danger m-r-5"
                                        onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này?');">
                                    <i class="anticon anticon-delete"></i> Xoá
                                </button>
                            }
                        </div>

                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>

