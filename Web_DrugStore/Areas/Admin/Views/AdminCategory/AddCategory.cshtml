@model Web_DrugStore.Models.DanhMuc
@{
    ViewBag.Title = "Thêm danh mục mới - PharmaVillage";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align:center; margin-bottom: 20px;">THÊM MỚI DANH MỤC</h2>
<br />
<form method="post" action="@Url.Action("AddCategory", "AdminCategory", new { area = "Admin" })">
    <div class="form-group row" style="margin-bottom: 15px;">
        <label for="TenDanhMuc" class="col-sm-2 col-form-label">Tên danh mục</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.TenDanhMuc, new { @class = "form-control", placeholder = "Nhập vào tên danh mục" })
        </div>
    </div>

    <div class="form-group d-flex align-items-center" style="margin-bottom: 15px;">
        <label for="ParentId" class="col-form-label">Danh mục cha</label>
        @Html.DropDownListFor(model => model.ParentId, new SelectList(ViewBag.DanhMucList, "Id", "TenDanhMuc"), "Chọn danh mục cha", new { @class = "form-control" })

    </div>
    <div class="form-group" style="margin-bottom: 15px;">
        <label for="MoTa" class="col-form-label">Miêu tả</label>
        @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", placeholder = "Nhập vào miêu tả danh mục (tuỳ chọn)" })
    </div>

    <div class="form-group">
        @Html.CheckBoxFor(model => model.HoatDong, new { @id = "checkbox1" })
        <label for="checkbox1">Hoạt động</label>
    </div>

    <div class="form-group row" style="margin-top: 20px;">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-tone m-r-5">Thêm danh mục</button>
            <a href="@Url.Action("Index")" class="btn btn-danger btn-tone m-r-5">Thoát</a>
        </div>
    </div>
</form>
